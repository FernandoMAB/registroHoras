@page
@model registroHoras.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RegistroEntradum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegistroEntradum.Fecha" class="control-label"></label>
                <input asp-for="RegistroEntradum.Fecha" class="form-control" />
                <span asp-validation-for="RegistroEntradum.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistroEntradum.Usuario" class="control-label"></label>
                <select asp-for="RegistroEntradum.Usuario" name="nombre" asp-items="Model.Users" class="form-control">
                    <option value="">Selecione...</option>
                </select>
                <input asp-for="RegistroEntradum.Usuario" type="hidden" name="nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RegistroEntradum.Estado" class="control-label"></label>
                @*<input asp-for="RegistroEntradum.Estado" class="form-control" />*@
                <select asp-for="RegistroEntradum.Estado" class="form-control">
                    <option value="E">Entrada</option>
                    <option value="S">Salida</option>
                </select>
                <span asp-validation-for="RegistroEntradum.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
